<p id="notice"><%= notice %></p>

<h1>Listing Cities</h1>
<p>@city_hash: <%= @city_hash %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Locked</th>
      <th>Stone</th>
      <th>Wood</th>
      <th>Population</th>
      <th>Win</th>
      <th>Lose</th>
      <th>City Hash</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.locked %></td>
        <td><%= city.stone %></td>
        <td><%= city.wood %></td>
        <td><%= city.population %></td>
        <td><%= city.win %></td>
        <td><%= city.lose%></td>
        <td><%= city.city_hash%></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path %>
