<div ng-app="cityModule" ng-cloak>

  <div ng-controller="cityController" >
    My name is: {{name}}

    <div id="factories">
      <button type="button" class="btn btn-sm btn-default">Build Gem mining</button>
      <button type="button" class="btn btn-sm btn-default">Build Starport</button>
    </div>

    <div id="army">
      <button type="button" class="btn btn-sm btn-default">Build Ship Type1 (gem-10,energy-10)</button>
      <button type="button" class="btn btn-sm btn-default">Build Ship Type2 (gem-25,energy-20)</button>
      <button type="button" class="btn btn-sm btn-default">Build Ship Type3 (gem-40,energy-50)</button>
      <button type="button" class="btn btn-sm btn-default">Build Ship Type4 (gem-70,energy-30)</button>
    </div>


    <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @city.name %>
    </p>

    <p>
      <strong>Locked:</strong>
      <%= @city.locked %>
    </p>

    <p>
      <strong>Stone:</strong>
      <%= @city.stone %>
    </p>

    <p>
      <strong>Wood:</strong>
      <%= @city.wood %>
    </p>

    <p>
      <strong>Population:</strong>
      <%= @city.population %>
    </p>

    <%= link_to 'Edit', edit_city_path(@city) %> |
    <%= link_to 'Back', cities_path %>

  </div>
</div>

